{
  "name": "mitein",
  "private": true,
  "description": "A platform to connect and learn",
  "version": "0.1.0",
  "license": "MIT",
  "main": "functions.js",
  "scripts": {
    "build": "next build",
    "clean": "rm -rf .next",
    "dev": "next dev -p 8000",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "next start",
    "start-emulator": "CLOUD_RUNTIME_CONFIG=$(pwd)/functions/.runtimeconfig.json firebase emulators:start --import=./firebase-emulator-data --export-on-exit",
    "test": "jest",
    "lint-functions": "eslint ./functions",
    "serve-functions": "firebase emulators:start --only functions",
    "functions-shell": "firebase functions:shell",
    "start-functions": "yarn shell",
    "deploy-functions": "firebase deploy --only functions",
    "logs-functions": "firebase functions:log"
  },
  "engines": {
    "node": "^14"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.0.0",
    "@svgr/webpack": "^6.2.0",
    "@testing-library/dom": "^8.11.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.0.0",
    "eslint": "^5.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.25.2",
    "firebase-functions-test": "^0.2.0",
    "jest": "^27.4.7",
    "jest-transform-graphql": "^2.1.0",
    "prettier": "2.4.1",
    "react-test-renderer": "^16.6.0"
  },
  "dependencies": {
    "@apollo/client": "^3.4.11",
    "@fullcalendar/daygrid": "^5.1.0",
    "@fullcalendar/interaction": "^5.2.0",
    "@fullcalendar/react": "^5.1.0",
    "@fullcalendar/timegrid": "^5.1.0",
    "@google-cloud/pubsub": "^2.16.0",
    "add": "^2.0.6",
    "apollo-server-micro": "^2.25.0",
    "axios": "^0.21.1",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "classnames": "^2.2.6",
    "firebase": "^8.10.0",
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.15.7",
    "graphql": "^15.5.3",
    "graphql-extensions": "^0.15.0",
    "graphql-tag": "^2.11.0",
    "isomorphic-fetch": "^2.2.1",
    "js-cookie": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.3",
    "micro-cors": "^0.1.1",
    "next": "^12.0.8",
    "next-i18next": "^8.8.0",
    "next-transpile-modules": "^9.0.0",
    "node-sass": "4.14",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.15.3",
    "react-router-dom": "^5.3.0",
    "seamless-scroll-polyfill": "^2.1.4",
    "sib-api-v3-sdk": "^8.2.1",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "yarn": "^1.22.10"
  },
  "jest": {
    "setupFilesAfterEnv": ["<rootDir>unitTests/setupTests.js"],
    "moduleDirectories": [
      "node_modules",
      "unitTests",
      "__dirname"
    ],
    "moduleNameMapper": {
      "\\.(scss|css|png|gif|jpg|jpeg|less|woff|woff2)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.svg": "<rootDir>/__mocks__/svg.js",
      "^@api(.*)$": "<rootDir>/apiServer$1",
      "^apollo(.*)$": "<rootDir>/src/apollo$1",
      "^assets(.*)$": "<rootDir>/src/assets$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^@constants(.*)$": "<rootDir>/src/constants$1",
      "^context(.*)$": "<rootDir>/src/context$1",
      "^@graphql(.*)$": "<rootDir>/src/graphql$1",
      "^helpers(.*)$": "<rootDir>/src/helpers$1",
      "^hooks(.*)$": "<rootDir>/src/hooks$1",
      "^locales(.*)$": "<rootDir>/src/locales$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^scss(.*)$": "<rootDir>/src/scss$1",
      "^routes(.*)$": "<rootDir>/src/routes$1",
      "^unitTests(.*)$": "<rootDir>/unitTests$1"
    },
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    },
    "testEnvironment": "jsdom"
  }
}
